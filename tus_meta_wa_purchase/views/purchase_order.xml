<?xml version="1.0"?>
<odoo>
    <record id="view_order_form_inherit_wa_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.wa.purchase.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_unlock']" position="after">
                <button name="%(tus_meta_whatsapp_base.action_wa_compose_message_wizard)d" type="action" string="Send by WhatsApp"
                        context="{'report': 'purchase.report_purchase_quotation'}"
                        attrs="{'invisible': [('state', 'in', ['to approve','purchase','done','cancel'])]}" groups="tus_meta_wa_purchase.whatsapp_group_purchase_user"
                        />
                <button name="%(tus_meta_whatsapp_base.action_wa_compose_message_wizard)d" type="action" string="Send by WhatsApp"
                        context="{'report': 'purchase.action_report_purchase_order'}"
                        attrs="{'invisible': [('state', 'in', ['draft','sent','cancel'])]}" groups="tus_meta_wa_purchase.whatsapp_group_purchase_user"
                        />
            </xpath>
        </field>
    </record>
</odoo>
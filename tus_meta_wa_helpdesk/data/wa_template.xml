<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="helpdesk_ticket_wa_template" model="wa.template">
            <field name="name">helpdesk_ticket_template</field>
            <field name="provider_id" ref="tus_meta_whatsapp_base.provider_1"></field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="category">alert_update</field>
            <field name="lang" ref="base.lang_en"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="margin: 0px; padding: 0px;">
                        <p style="margin: 0px; padding: 0px; font-size: 13px;">
                            Dear <t t-out="object.sudo().partner_id.name or 'Madam/Sir'" contenteditable="false"
                                    data-oe-t-inline="true">Madam/Sir</t>,
                            <br/>
                            <br/>
                            Your request
                            <t t-if="object.get_portal_url()" data-oe-t-group="2" data-oe-t-group-active="true"
                               data-oe-t-inline="true">
                                <a t-attf-href="/my/ticket/{{ object.id }}/{{ object.access_token }}"
                                   t-out="object.name or ''" contenteditable="false"></a>
                            </t>
                            has been received and is being reviewed by our <t t-out="object.team_id.name or ''"
                                                                              contenteditable="false"
                                                                              data-oe-t-inline="true">Table legs are
                            unbalanced
                                </t> team.
                            The reference of your ticket is <t t-out="object.id or ''" contenteditable="false"
                                                               data-oe-t-inline="true">15</t>.
                            <br/>
                            <br/>
                            Thank You.

                        </p>
                    </div>
                </div>
            </field>
        </record>

        <record id="helpdesk_ticket_wa_template_body" model="components">
            <field name="type">body</field>
            <field name="formate">text</field>
            <field name="wa_template_id" ref="tus_meta_wa_helpdesk.helpdesk_ticket_wa_template"/>
            <field name="text">Dear {{1}},

Your request {{2}} has been received and is being reviewed by our {{3}} team. The reference of your ticket is {{4}}.

Thank You.</field>
        </record>
    </data>
</odoo>